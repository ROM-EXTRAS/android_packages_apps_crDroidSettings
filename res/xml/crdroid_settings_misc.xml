<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Unlock FPS for specific games -->
    <SwitchPreference
        android:key="use_games_spoof"
        android:icon="@drawable/ic_backup"
        android:title="@string/use_games_spoof_title"
        android:summary="@string/use_games_spoof_summary" />

    <!-- Unlimited google photos storage -->
    <SwitchPreference
        android:key="use_photos_spoof"
        android:icon="@drawable/ic_backup"
        android:title="@string/use_photos_spoof_title"
        android:summary="@string/use_photos_spoof_summary"
        android:defaultValue="true" />

    <!-- Netflix Spoof -->
    <SwitchPreference
        android:key="use_netflix_spoof"
        android:icon="@drawable/ic_netflix"
        android:title="@string/netflix_spoof_title"
        android:summary="@string/netflix_spoof_summary"
        android:defaultValue="false" />

    <!-- Screenshot Sound  -->
    <com.crdroid.settings.preferences.SystemSettingSwitchPreference
        android:key="screenshot_shutter_sound"
        android:icon="@drawable/ic_cellphone_sound"
        android:title="@string/screenshot_shutter_sound_title"
        android:summary="@string/screenshot_shutter_sound_summary"
        android:defaultValue="true" />

    <!-- Adaptive Playback -->
    <Preference
        android:key="adaptive_playback_settings"
        android:icon="@drawable/ic_settings_sound"
        android:title="@string/adaptive_playback_title"
        android:summary="@string/adaptive_playback_summary"
        android:fragment="com.crdroid.settings.fragments.misc.AdaptivePlayback" />
</PreferenceScreen>
